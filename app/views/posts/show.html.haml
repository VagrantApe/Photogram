.posts-wrapper.row
  .post
    .post-head
      .name
        = @post.user.user_name
    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.caption
      =@post.caption
    .text-center.edit-links
      =link_to "Cancel", posts_path
      -if current_user.id == @post.user.id
        |
        =link_to "Edit", edit_post_path(@post)
        |
        = link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this picture post?"}
